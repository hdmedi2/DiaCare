{
  "name": "iyac_diabetes",
  "version": "1.0.19",
  "description": "아이약 당뇨케어",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cross-env NODE_ENV=development electron .",
    "clean-dist": "node scripts/clean-dist-folder.js",
    "clean-out": "node scripts/clean-out-folder.js",
    "obfuscate": "npm run clean-out && javascript-obfuscator src --output out",
    "verson-up": "node scripts/verson-bump.js",
    "build": "node scripts/clean-out-folder.js && npm run obfuscator && electron-builder .",
    "publish": "npm run obfuscate && npm run clean-dist && electron-builder --publish always"
  },
  "build": {
    "asar": true,
    "appId": "com.hdmedi.iyacDiaCare",
    "files": [
      "config/**/*",
      "html/**/*",
      "assets/**/*",
      "!scripts/**/*",
      "out/**/*",
      "!dist/**/*",
      "!src/**/*"
    ],
    "extraResources": [
      "app.mainfest"
    ],
    "afterPack": "scripts/attach-manifest.js",
    "publish": [
      {
        "provider": "github",
        "owner": "hdmedi2",
        "repo": "DiaCareDist",
        "releaseType": "release"
      }
    ],
    "extraMetadata": {
      "main": "out/index.js"
    },
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/iyac_app_logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true
    },
    "mac": {
      "target": "dmg",
      "icon": "./assets/iyac_app_logo.icns"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hdmedi2/DiaCare.git"
  },
  "keywords": [
    "아이약당뇨케어"
  ],
  "author": "hdmedi,westwiz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hdmedi2/DiaCare/issues"
  },
  "homepage": "https://github.com/hdmedi2/DiaCare#readme",
  "dependencies": {
    "axios": "^1.7.8",
    "cross-env": "^7.0.3",
    "electron-log": "^5.2.3",
    "electron-updater": "^6.3.9",
    "json2csv": "^6.0.0-alpha.2",
    "playwright": "1.38",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3",
    "javascript-obfuscator": "^4.1.1",
    "rcedit": "^4.0.1"
  }
}
